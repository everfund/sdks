{
  "name": "everfund-monorepo",
  "version": "1.3.0",
  "private": true,
  "homepage": "https://docs.everfund.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everfund/everfund"
  },
  "license": "MIT",
  "author": "Christopher Burns",
  "workspaces": [
    "packages/**",
    "examples/**"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "cipublish": "ts-node scripts/publish.ts",
    "cipublishforce": "CI=true npm run cipublish",
    "clean": "npm exec --workspaces -c \"rm -rf build || true\"",
    "dev": "npm run watch",
    "genversion": "genversion --es6 --semi src/version.ts",
    "linkAll": "lerna exec 'npm link' --parallel",
    "prettier": "prettier \"packages/*/{src/**,examples/**/src/**}.{md,js,jsx,ts,tsx,json}\" --write",
    "unlinkAll": "lerna exec 'npm unlink' --parallel",
    "watch": "concurrently --kill-others \"rollup --config rollup.config.js -w\" \"tsc -b --watch\""
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/parse": "^16.2.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "concurrently": "^7.3.0",
    "core-js": "^3.22.3",
    "current-git-branch": "^1.1.0",
    "git-log-parser": "^1.2.0",
    "lerna": "^4.0.0",
    "luxon": "^2.3.2",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "prettier-package-json": "^2.6.4",
    "prettier-plugin-sort-imports": "^1.7.0",
    "rollup": "^2.70.2",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-visualizer": "^5.6.0",
    "stream-to-array": "^2.3.0",
    "svelte": "3.49.0",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.6.1",
  "namespace": "@everfund"
}
